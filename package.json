{
  "name": "linkace-website",
  "description": "Source of the LinkAce website",
  "author": "Kevin Woblick <mail@kovah.de>",
  "license": "MIT",
  "scripts": {
    "dev": "npm run development",
    "development": "mix",
    "watch": "mix watch",
    "watch-poll": "mix watch -- --watch-options-poll=1000",
    "hot": "mix watch --hot",
    "prod": "npm run production",
    "production": "mix --production",
    "algolia": "atomic-algolia",
    "serve": "hugo serve -D --bind 0.0.0.0",
    "build": "npm run production && hugo",
    "build-with-search": "npm run production && hugo && npm run algolia"
  },
  "dependencies": {
    "algoliasearch": "^5.18.0",
    "bootstrap": "^5.3.3",
    "instantsearch.js": "^4.75.6",
    "prismjs": "^1.25.0"
  },
  "devDependencies": {
    "atomic-algolia": "^0.3.19",
    "cross-env": "^7.0.3",
    "laravel-mix": "^6.0.39",
    "sass": "^1.83.0",
    "sass-loader": "^16.0.4"
  }
}
